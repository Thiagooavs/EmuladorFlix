<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EmuladorFlix.Categorias.Suspence"
             Title="Suspence"
             BackgroundColor="Black">
    <ContentPage.Content Style="{StaticResource Back}">
        <ScrollView>
            <Grid RowDefinitions="120, 300, 300" ColumnDefinitions="*, *"
           RowSpacing="10" ColumnSpacing="10" Margin="10"
           VerticalOptions="FillAndExpand">

                <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="Suspense" TextColor="Red" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" FontSize="50"/>


                <ImageButton Grid.Row="1" Grid.Column="0" x:Name="corra" BackgroundColor="Black" Source="corra.jpg" Clicked="corra_Clicked" />
                <ImageButton Grid.Row="1" Grid.Column="1" x:Name="luther" BackgroundColor="Black" Source="luther.jpg" Clicked="luther_Clicked"/>
                <ImageButton Grid.Row="2" Grid.Column="0" x:Name="semsaida" BackgroundColor="Black" Source="semsaida.jpg" Clicked="semsaida_Clicked"/>
                <ImageButton Grid.Row="2" Grid.Column="1" x:Name="birdbox" BackgroundColor="Black" Source="birdbox.jpeg" Clicked="birdbox_Clicked"/>



            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>