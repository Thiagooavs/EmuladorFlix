<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EmuladorFlix.Categorias.Ficcao"
             Title="Ficcao"
             BackgroundColor="Black">
    <ContentPage.Content Style="{StaticResource Back}">


        <Grid RowDefinitions="80" ColumnDefinitions="*, *"
               RowSpacing="10" ColumnSpacing="10" Margin="10"
               VerticalOptions="FillAndExpand">

            <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="Ficção Científica" TextColor="Red" BackgroundColor="#1e1e1f" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" FontSize="50"/>


            <ScrollView Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" >

                <Grid RowDefinitions="300, 300" ColumnDefinitions="*, *"
               RowSpacing="10" ColumnSpacing="10" Margin="10"
               VerticalOptions="FillAndExpand">

                    <ImageButton Grid.Row="0" Grid.Column="0" x:Name="mazerunner" BackgroundColor="Black" Source="mazerunner.jpg" Clicked="mazerunner_Clicked" />
                    <ImageButton Grid.Row="0" Grid.Column="1" x:Name="avatar" BackgroundColor="Black" Source="avatar.jpg" Clicked="avatar_Clicked"/>
                    <ImageButton Grid.Row="1" Grid.Column="0" x:Name="doctor" BackgroundColor="Black" Source="doctorwho.jpg" Clicked="doctor_Clicked"/>
                    <ImageButton Grid.Row="1" Grid.Column="1" x:Name="interestelar" BackgroundColor="Black" Source="interestelar.png" Clicked="interestelar_Clicked"/>



                </Grid>
                
            </ScrollView>
            
        </Grid>
        
    </ContentPage.Content>
</ContentPage>