<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EmuladorFlix.Categorias.Drama"
             Title="Drama"
             BackgroundColor="Black">
    <ContentPage.Content Style="{StaticResource Back}">
        <ScrollView>
            <Grid RowDefinitions="120, 300, 300" ColumnDefinitions="*, *"
       RowSpacing="10" ColumnSpacing="10" Margin="10"
       VerticalOptions="FillAndExpand">

                <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="Drama" TextColor="Red" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" FontSize="80"/>


                <ImageButton Grid.Row="1" Grid.Column="0" x:Name="coracaoferro" BackgroundColor="Black" Source="coracaodeferro.jpg" Clicked="coracaoferro_Clicked" />
                <ImageButton Grid.Row="1" Grid.Column="1" x:Name="nadanovo" BackgroundColor="Black" Source="novofront.jpg" Clicked="nadanovo_Clicked"/>
                <ImageButton Grid.Row="2" Grid.Column="0" x:Name="intocaveis" BackgroundColor="Black" Source="intocaveis.jpg" Clicked='intocaveis_Clicked'/>
                <ImageButton Grid.Row="2" Grid.Column="1" x:Name="clubluta" BackgroundColor="Black" Source="luta.jpg" Clicked="clubluta_Clicked"/>



            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>